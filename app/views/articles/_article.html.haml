.media.article
  .media-left
    = link_to article do
      = image_tag article.picture.thumb.url.to_s, width: 256, class: 'media-object'
  .media-body
    = link_to article do
      %h4.media-heading= article.title
      %p= article.description
    %ul.media-footer
      - unless article.category.nil?
        %li.category= article.category
      %li.date= l article.published_at, format: :long
      - unless article.source.blank?
        %li.source= link_to article.host, article.source
      %li.author= article.author