%header.navbar.navbar-fixed-top.navbar-blue
  .navbar-inner
    .container
      = link_to "Khayat", root_path, id: "logo"
      %nav.navbar-right
        %ul.nav.nav-pills
          %li= link_to "Временная ссылка для UnitPay", unitpay_path, style: 'font-weight: bolder; font-size: 1.1em;'
          %li= link_to t('header.fictions_link'), fictions_path
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = t('header.profile.label')
                %span.caret
              %ul.dropdown-menu
                %li= link_to t('header.profile.edit'), edit_user_registration_path(current_user)
                - if current_user.writer?
                  %li= link_to t('header.profile.writer_statistics'), statistic_user_path(current_user)
                %li.divider
                %li= link_to t('header.profile.signout'), destroy_user_session_path, :method => :delete
          - else
            %li
              = link_to '#', data: {toggle: "modal", target: "#loginModal"} do
                = t('header.signin')
