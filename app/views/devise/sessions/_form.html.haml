= form_for resource, as: resource_name, url: session_path(resource_name) do |f|
  .form-group
    = f.email_field :email, autofocus: true, class: 'form-control', placeholder: User.human_attribute_name(:email)

  .form-group
    = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: User.human_attribute_name(:password)

  .form-group
    = f.submit t('.submit'), class: 'btn btn-primary'
    - if devise_mapping.recoverable?
      = link_to t('.forgot-password'), new_password_path(resource_name)
