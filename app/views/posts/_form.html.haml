= form_for post do |f|
  .row
    .col-md-8
      .form-group
        = f.label :title
        = f.text_field :title, class: "form-control"
    .col-md-4
      .form-group
        = f.label :cover
        = f.file_field :cover, class: "form-control"
  .row
    .col-md-12
      .form-group
        = f.label :description
        = f.text_area :description, class: "form-control"
  .row
    .col-md-12
      .form-group
        = f.label :tag_list
        = f.text_field :tag_list, class: "form-control"
  .row
    .col-md-12
      .form-group
        = f.label :body
        = f.cktext_area :body
  .form-group
    = f.submit "Post", class: "btn btn-lg btn-default"
