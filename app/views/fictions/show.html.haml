- provide(:title, @fiction.title)
.page-header
  %h1
    = @fiction.title
    %small
      = @fiction.author.email
.row
  .col-md-3
    .row
      = image_tag @fiction.cover.thumb.url.to_s, class: "img-thumbnail"
    .row
      = render 'buy', fiction: @fiction
  .col-md-9
    .prose
      = markdown @fiction.body
