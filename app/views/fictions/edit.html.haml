%h2 Edit fiction
.row
  .col-md-2
  .col-md-8
    = form_for(@fiction) do |f|
      .form-group
        = f.label :title
        = f.text_field :title, class: "form-control"
      .form-group
        = f.label :body
        = f.text_area :body, class: "form-control"
      .form-group
        = f.label :genre_id
        = f.select :genre_id, Genre.all.map{ |genre| [genre.name, genre.id] }
      .form-group
        = f.label :author_id
        = f.select :author_id, User.all.select{ |user| user.writer }.map{ |user| [user.email, user.id] }, class: "form-control"
      .form-group
        = f.submit "Post", class: "btn btn-lg btn-primary"
  .col-md-2
