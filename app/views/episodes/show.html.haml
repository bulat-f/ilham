- provide(:title, "#{@fiction.title} | #{@episode.title}")
%h1
  = @fiction.title
  %small
    = @fiction.author_name
= render 'pager', episode: @episode
.row
  - unless @fiction.genre.name == 'poetry'
    .prose.protected
      %h2= @episode.title
      = markdown @episode.body
  - else
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-12
      .poetry.protected
        %h3= @episode.title
        = markdown @episode.body
= render 'pager', episode: @episode
