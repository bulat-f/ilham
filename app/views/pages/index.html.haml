- if user_signed_in?
  .row
    .col-md-12
      .jumbotron.center
        %h1= "Welcome, #{ current_user.email }"
        %p This site created for reading modern fiction literature
- else
  .row.top
    .col-md-8
      .jumbotron.center
        %h1 Welcome!!!
        %p This site created for reading modern fiction literature
        = link_to "Sign In", '#', class: "btn btn-lg btn-primary"
    .col-md-4
      .front-signin
        = render 'shared/signin_form'
